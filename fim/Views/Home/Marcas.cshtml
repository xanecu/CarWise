@model IEnumerable<fim.Models.marca>

@{
    ViewBag.Title = "Marcas";
}

<h2>Marcas</h2>
<h3 id="msg">@ViewBag.msg</h3>

<p>
    @Html.ActionLink("Create New", "CreateMarca")
</p>
<table class="table">
    <tr>
        <th>
           Código
        </th>
        <th>
          Marca
        </th>

        <th>logo</th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codmarca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.marca1)
        </td>
       
        <td>
            @{
                if (item.logotipo != null)
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.logotipo)" alt="erro" width="40" />
                }
                else
                {
                    <img src="~/fotos/nofoto.jpg" alt="erro" width="40" />
                }

            }

        </td>
        <td>
            @Html.ActionLink("Edit", "EditMarca", new {id=item.codmarca }) |
        
            @Html.ActionLink("Delete", "DeleteMarca", new {  id=item.codmarca })
        </td>
    </tr>
}

</table>
